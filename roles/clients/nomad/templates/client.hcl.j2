region     = "global"
datacenter = "{{ datacenter }}"
data_dir   = "/var/lib/nomad"

bind_addr = "0.0.0.0"
advertise {
  http = "{{ ansible_host }}:4646"
  rpc  = "{{ ansible_host }}:4647"
  serf = "{{ ansible_host }}:4648"
}

client {
  enabled = true
  servers = [
    {%- for host in groups['servers'] -%}
      "{{ hostvars[host]['ansible_host'] }}:4647",
    {%- endfor -%}
  ]
}

consul {
  address = "127.0.0.1:8500"
}